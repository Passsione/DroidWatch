<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/old_app_background"
    android:padding="10dp"
    tools:context=".GuideToConnect">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/primary_light"
            android:textSize="20sp"
            android:text="@string/guide_intro" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/primary_light"
            android:text="@string/points_list"
            />
        <Button
            android:layout_marginTop="15dp"
            android:layout_gravity="top"
            android:text="@string/back_to_device_list_label_guide_to"
            android:textSize="20sp"
            android:textColor="@color/primary_light"
            android:background="@drawable/button"
            android:id="@+id/backtodevicelist1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>